@model Model.UsuarioDTO
@{
    ViewBag.Title = "Detalle usuario";
}

<script src="~/Scripts/Admin/DetalleUsuario.js"></script>
<script type="text/javascript">
    var CrearUsuario = "@Url.Action("CrearUsuario", "Admin")";
</script>

<h2>Detalle usuario</h2>

<div class="content-heading">
    <div>
        Usa el siguiente formulario para registrar/editar los <b>usuarios</b>.
    </div>

</div>

<form id="formDetalleUsuario">
    @Html.HiddenFor(model => Model.Id)
    <div class="card card-default" style="border-color: #aaaaaa; border-width: 1px;      border-style: solid; margin:1%">
        <div class="card-header d-flex align-items-center">
            <div class="card-body">
                <div class="form-group">
                        <div class="col-md-6 col-sm-6 form-group">
                            <label for="IdEmpresa" class="control-label font-weight-bold">Empresa</label>
                            @Html.DropDownListFor(model => model.IdEmpresa, new SelectList(Model.EmpresaList, "Id", "Nombre"), new { @class = "chosen-select form-control", @id = "IdEmpresa", @lang = "es" })
                        </div>
                        <div class="form-group col-xl-6 col-sm-6">
                            <label class="text-bold col-form-label">Nombre*</label>
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control ", @id = "Nombre", @maxlength = 60, @required = "required" })
                        </div>
                        <div class="form-group col-xl-6 col-sm-6">
                            <label class="control-label col-form-label font-weight-bold">Usuario*</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "UserName", @autocomplete = "off", @required = "required" })
                        </div>
                        <div class="form-group col-xl-6 col-sm-6">
                            <label class="text-bold col-form-label">Password*</label>
                            @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control ", @id = "UserPassword", @required = "required", @type = "password" })
                        </div>
                </div>
                <div class="form-group row" style="text-align:right">
                    <div style="margin-right:20px">
                        <button class="btn btn-secondary" id="btnReturn" type="button">Regresar</button>
                        <button class="btn btn-success" id="btnSaveUsuario" type="submit">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
