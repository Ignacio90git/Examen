@using Model;
@{
    ViewBag.Title = "Usuario";
}
@model Model.UsuarioDTO
<h2>Usuarios</h2>

<script src="~/Scripts/Admin/Usuario.js"></script>
<script type="text/javascript">
    var BuscarUsuario = "@Url.Action("BuscarUsuario", "Admin")";
    var DetalleUsuario = "@Url.Action("DetalleUsuario", "Admin")";
    var EliminarUsuario = "@Url.Action("EliminarUsuario", "Admin")";
    var modelJson = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
</script>

<div class="content-heading">
    <div>
        Usa el siguiente formulario para mostrar los <b>usuario</b> registrados en la aplicaci&oacute;n.
    </div>

</div>

<div class="card card-default" style="border-color: #aaaaaa; border-width: 1px;      border-style: solid; margin:1%">
    <div class="card-header">
    </div>
    <div class="card-body">
        <form id="formBuscadorUsuario">
            <div class="form-group">
                <div class="col-md-6 col-sm-6 form-group">
                    <label for="IdEmpresa" class="control-label font-weight-bold">Empresa</label>
                    @Html.DropDownListFor(model => model.IdEmpresa, new SelectList(Model.EmpresaList, "Id", "Nombre"), new { @class = "chosen-select form-control", @id = "IdEmpresa", @lang = "es" })
                </div>
                <div class="col-md-6 col-sm-6 form-group">
                    <label for="Nombre" class="control-label font-weight-bold">Nombre usuario</label>
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control ", @id = "Nombre", @maxlength = 60 })
                </div>

            </div>
            <div class="form-group" style="text-align:right">
                <div style="margin-right:20px">
                    <button type="submit" id="btnBuscar" class="btn btn-primary">Buscar</button>
                    <button type="button" id="btnRegistrar" class="btn btn-success">Registrar</button>
                </div>
            </div>
        </form>
    </div>
    <hr />

    <div class="card card-default containerGridBuscador">
        <div class="card-header">Resultados de b&uacute;squeda</div>
        <div class="card-body">
            <div class="container-fluid">
                <!-- DATATABLE-->
                <div class="card">
                    <div class="card-body">
                        <table id="gridBuscador" width="100%" class="table table-striped table-bordered table-hover compact">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Usuario</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

